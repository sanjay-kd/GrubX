<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/exo_light</item>
    </style>

    <style name="customNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fontFamily">@font/exo_light</item>
    </style>

    <style name="customNoActionBarThemeWithStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#ff0000</item>
        <item name="android:windowAnimationStyle">@style/CustomAnimation</item>
        <item name="android:fontFamily">@font/exo_light</item>
    </style>

    <style name="CustomMainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#ff0000</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
        <item name="android:windowAnimationStyle">@style/CustomAnimation</item>
        <item name="android:fontFamily">@font/exo_light</item>
        <item name="colorControlNormal">#fff</item>
    </style>

    <style name="Toolbar.TitleText.Collapsed" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/exo_light</item>
    </style>

    <style name="Toolbar.TitleText.Expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/exo_light</item>
    </style>

    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">#ffffff</item>
        <item name="android:fontFamily">@font/exo_light</item>
    </style>

    <style name="CanteensCategoryTheme" parent="AppTheme">
        <item name="colorPrimary">#FFA726</item>
        <item name="colorPrimaryDark">#FF9800</item>
        <item name="android:windowAnimationStyle">@style/CustomAnimation</item>
        <item name="android:fontFamily">@font/exo_light</item>
    </style>

    <style name="CustomAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:fontFamily">@font/exo_light</item>
    </style>

    <style name="MyOrdersTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#2196F3</item>
        <item name="android:fontFamily">@font/exo_light</item>
    </style>

    <style name="MoreAppsTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:statusBarColor">@color/Red</item>
        <item name="android:fontFamily">@font/exo_light</item>
    </style>

    <style name="splashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">#2E313E</item>
    </style>

</resources>
