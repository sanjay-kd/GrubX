<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="nsit.com.canteenapp.McCainCanteenItemsCategory"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mcCainSnacksLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mcCainSnacksRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#33000000"
                    android:backgroundTintMode="src_over"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SNACKS"
                    android:letterSpacing="0.05"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:padding="15dp"
                    android:background="#73000000"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mcCainDrinksLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mcCainDrinksRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#33000000"
                    android:backgroundTintMode="src_over"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DRINKS"
                    android:letterSpacing="0.05"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:padding="15dp"
                    android:background="#73000000"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mcCainSouthIndianLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mcCainSouthIndianRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#33000000"
                    android:backgroundTintMode="src_over"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SOUTH INDIAN"
                    android:letterSpacing="0.05"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:padding="15dp"
                    android:background="#73000000"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>