<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="#2E313E">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="71dp"
        android:text="WELCOME TO"
        android:textAlignment="center"
        android:textColor="#7E8093"
        android:textSize="27sp"
        android:textStyle="bold"
        android:letterSpacing="0.04"/>

    <TextView
        android:id="@+id/companyNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/welcomeTextView"
        android:text="GrubX"
        android:textAlignment="center"
        android:textColor="#D2D4E5"
        android:textSize="23sp"
        android:letterSpacing="0.04"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/app_launcher_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:layout_marginTop="20dp"
            android:letterSpacing="0.05"
            android:text="Order \u2022 Eat \u2022 Phir Repeat"
            android:textAlignment="center"
            android:textColor="#C0C3D0"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:text="Copyright &#169; GrubX 2018"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>