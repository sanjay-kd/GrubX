<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp">

            <ImageView
                android:id="@+id/canteenImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_food_item_image"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/itemsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chilly Potatoe"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/canteenNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mc Cain"
                        android:paddingTop="5dp"
                        android:textSize="13sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/addToFavBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/fav_home_featured_false_icon" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="6dp"
                android:layout_above="@id/linearLayout2"/>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/itemRatingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4.3"
                    android:textSize="28sp"
                    android:drawableStart="@drawable/home_featured_rating_icon"
                    android:drawablePadding="6dp"
                    android:scaleX="0.5"
                    android:scaleY="0.5"/>


                <TextView
                    android:id="@+id/itemdTotalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="150"
                    android:textSize="28sp"
                    android:drawableStart="@drawable/home_featured_rupee_icon"
                    android:drawablePadding="6dp"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:paddingEnd="0dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/addToCartBtn"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_gravity="end"
                        android:background="@drawable/home_featured_add_to_cart_icon"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
